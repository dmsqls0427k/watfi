<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_soure_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#C6D3E3"
    tools:context="com.example.danae.wat2340.Controller.AddSourceReport">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:id="@+id/nameText"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameText"
        android:layout_alignParentStart="true"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:id="@+id/dateText"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:text="Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateText"
        android:textAppearance="@style/TextAppearance.AppCompat"

        android:id="@+id/textview" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waterCondition"
        android:layout_alignParentStart="true"
        android:id="@+id/conditionSpinner" />

    <TextView
        android:text="Water Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conditionSpinner"
        android:layout_alignParentStart="true"
        android:id="@+id/textView16"
        android:textAppearance="@style/TextAppearance.AppCompat"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:id="@+id/typeSpinner" />

    <TextView
        android:text="Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeSpinner"
        android:id="@+id/tex"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat"

        android:layout_alignEnd="@+id/textView16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tex"
        android:id="@+id/countText"
        android:textAppearance="@style/TextAppearance.AppCompat"

        android:layout_alignParentEnd="true" />

    <Button
        android:text="submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/submitBtn"
        android:layout_below="@+id/countText"
        android:layout_toEndOf="@+id/textView10" />

    <Button
        android:text="cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:id="@+id/cancelBtn"
        android:layout_alignBaseline="@+id/submitBtn"
        android:layout_alignBottom="@+id/submitBtn"
        android:layout_toEndOf="@+id/waterCondition" />

    <TextView
        android:text="Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/LatitudeT"
        android:layout_alignStart="@+id/LatitudeT" />

    <TextView
        android:text="Water Condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/waterCondition"
        android:textAppearance="@style/TextAppearance.AppCompat"

        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/longitude"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toEndOf="@+id/waterCondition" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/latitude"
        android:layout_below="@+id/textview"
        android:layout_alignStart="@+id/longitude"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LatitudeT"
        android:layout_alignBaseline="@+id/latitude"
        android:layout_alignBottom="@+id/latitude"
        android:layout_alignEnd="@+id/textView16" />

</RelativeLayout>
