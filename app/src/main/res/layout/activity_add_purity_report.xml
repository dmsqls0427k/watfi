<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_purity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#C6D3E3"
    tools:context="com.example.danae.wat2340.Controller.AddPurityReport">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameText"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameText"
        android:layout_alignParentStart="true"
        android:id="@+id/textView13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:id="@+id/dateText" />

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateText"
        android:layout_alignParentStart="true"
        android:id="@+id/text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/locationEdit"
        android:layout_below="@+id/text"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationEdit"
        android:layout_alignParentStart="true"
        android:id="@+id/textView12" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/conditionSpinner"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/ffds"
        android:layout_alignParentStart="true"
        android:id="@+id/contaminationText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Virus PPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contaminationText"
        android:layout_alignParentStart="true"
        android:id="@+id/textView15" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:id="@+id/virusText" />

    <TextView
        android:text="Report Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/virusText"
        android:id="@+id/textView17" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberText"
        android:layout_below="@+id/textView17"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitBtn"
        android:layout_below="@+id/numberText"
        android:layout_toEndOf="@+id/Virus"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelBtn"
        android:layout_alignBaseline="@+id/submitBtn"
        android:layout_alignBottom="@+id/submitBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="67dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/virusSpinner"
        android:layout_below="@+id/Virus"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Contamination PPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ffds"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/virusSpinner"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Virus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Virus"
        android:layout_below="@+id/conditionSpinner"
        android:layout_alignParentStart="true" />

</RelativeLayout>
